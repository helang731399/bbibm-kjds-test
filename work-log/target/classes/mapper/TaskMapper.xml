<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bbibm.log.mapper.TaskMapper">

  <resultMap id="taskMap" type="com.bbibm.log.entity.Task">
                  <id property="id" column="id"/>
                        <result property="userId" column="user_ID"/>
                        <result property="workDate" column="work_Date"/>
                        <result property="reportType" column="report_Type"/>
                        <result property="theme" column="theme"/>
                        <result property="content" column="content"/>
                        <result property="reportContent" column="report_Content"/>
                        <result property="progressCompleted" column="progress_Completed"/>
            </resultMap>

    <select id="selectListTask" resultType="com.bbibm.log.repvo.TaskVo">
        select report_Type,theme,content,report_Content,progress_Completed
        from task
        where user_ID = #{userId} 
    </select>
</mapper>
